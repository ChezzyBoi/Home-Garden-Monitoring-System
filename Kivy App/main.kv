<Menu>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: '[color=99cc66]Home Garden[/color] \n                 [color=ff66b2]Monitoring[/color] \n                             [color=00b2ff]Application[/color]'
            font_size: 36
            markup: True
            bold: True
            halign: 'left'
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: 'Set Garden Properties'
            font_size: 32
            color: 1, 1, 1, 1
            background_normal: ''
            background_color: 0.5, 0.5, 0.5, 1
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'gardenproperties'
        Button:
            text: 'View Current Conditions'
            font_size: 32
            color: 1, 1, 1, 1
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'currentconditions'                
        Button:
            text: 'Search Recomendations'
            font_size: 32
            color: 1, 1, 1, 1
            background_normal: ''
            background_color: 0.5, 0.5, 0.5, 1
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'recomendations' 
        Button:
            text: 'Manage Notifications'
            font_size: 32
            color: 1, 1, 1, 1
            background_normal: ''
            background_color: 0, 0, 0, 1
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'notifications'

